module tb;
  int data1,data2;
  event done1;
  //Generator
  initial begin
    for(int i=0;i<8;i++)begin
      data1=$random();
      $display("generated data =%0d",data1);
      #1;
      #9;
    end
    ->done1;//event triggered
  end
  //Driver
  initial begin
    forever begin
    #10;
    data2=data1;
    $display("received data = %0d",data2);
    end
  end
  //Simulation hold
  initial begin
    wait(done1.triggered);
    $finish;
  end
endmodule
